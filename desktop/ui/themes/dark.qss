}

#payment_option_selected_purple {
    background-color: #6c5ce7;
    color: white;
    border: 1px solid #6c5ce7;
    font-weight: normal;
    padding: 8px 15px;
    border-radius: 0;
    margin: 0;
}

#payment_option_dark:hover {
