}

#search_button_red {
    background-color: #e74c3c;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 15px;
    font-weight: bold;
    font-size: 14px;
}

#search_button_red:hover {
    background-color: #c0392b;
}

#dark_filter_option {
    background-color: #212529;
    border: 1px solid #343a40;
    border-radius: 3px;
    color: #adb5bd;
    padding: 6px 12px;
    font-size: 13px;
    font-weight: normal;
    text-align: center;
}

#dark_filter_option:checked {
    background-color: #212529;
